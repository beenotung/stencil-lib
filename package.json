{
  "name": "stencil-lib",
  "version": "0.2.1",
  "description": "Utility Library when using Stencil with Ionic core for PWA",
  "keywords": [],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run rawtest",
    "clean": "rimraf node_modules/@beenotung/tslib/index.* dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "postformat": "tslint -p . --fix",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "node mk-package.js > dist/package.json",
    "pretest": "npm run format && npm run build",
    "rawtest": "ts-node test/index.ts",
    "prepublishOnly": "npm run rawtest && npm run build"
  },
  "husky": {
    "hook": {
      "pre-commit": "npm run format"
    }
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@beenotung/tslib": "^14.32.0"
  },
  "devDependencies": {
    "@ionic/core": "^4.7.4",
    "@stencil/core": "^1.2.5",
    "@types/node": "*",
    "husky": "^3.0.3",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "@ionic/core": "^4.7.4",
    "@stencil/core": "^1.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/stencil-lib.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/stencil-lib/issues"
  },
  "homepage": "https://github.com/beenotung/stencil-lib#readme"
}
